{
  "name": "Spectra",
  "productName": "Spectra",
  "description": "A look into building a game companion app",
  "version": "0.0.1",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none npm start --prefix spectra-react\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "npm run build --prefix react-app",
    "electron-start": "electron ."
  },
  "author": {
    "name": "James Studdart"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "node-hid": "^3.0.0",
    "path": "^0.12.7"
  }
}
